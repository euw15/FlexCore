<GridLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingStart="8dp"
    android:padding="4dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="355dp"
        android:layout_height="42dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/SeleccionePOS"
        android:id="@+id/textView"
        android:layout_row="0"
        android:layout_column="0"
        android:textAlignment="viewStart"
        android:textColor="#ffffa420"
        android:paddingStart="8dp"
        android:singleLine="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:id="@+id/listView"
        android:layout_row="1"
        android:layout_column="0"
        android:choiceMode="none"
        android:background="#ffeeff7b"
        android:visibility="visible"
        android:clickable="false"
        android:smoothScrollbar="true"
     />

    <Button
        android:layout_width="146dp"
        android:layout_height="77dp"
        android:text="@string/Pagar"
        android:id="@+id/button"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="left|bottom|center|right"
        android:drawableLeft="@drawable/pay"
        android:paddingStart="9dp"
        android:enabled="false"
        android:onClick="actionToggleLED"
        android:state_pressed = "true"

        />

</GridLayout>